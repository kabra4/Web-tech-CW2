extend layout.pug

block content
    main.addTask
        h1 Add new task

        if success
            p.success Task was added successfully

        if error
            p.error Please add task (name & date) before submitting

        form(method ='POST' action='/add/create-task')
            label(for='name') Name
            br
            input(id='name' type ='text' name='name' required)
            br
            label(for='description') Full Description (optional)
            br
            textarea(id='description' rows="4" name='description')
            br
            label(for='deadlineD') Deadline
            br
            input(id='deadlineD'
                type ='date'
                name='date'
                value= date
                min= date
                max="2030-12-30"
                required)

            input(type="time" name="time" value='00:00' required)
            button(type='submit' class="create-task-btn") Create